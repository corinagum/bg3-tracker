{
  "name": "bg3-tracker",
  "version": "0.0.1",
  "description": "My way of tracking and planning Baldur's Gate 3 achievements",
  "keywords": [
    "achievements",
    "tracker",
    "Baldur's Gate 3",
    "planner",
    "gaming"
  ],
  "homepage": "https://github.com/corinagum/bg3-tracker#readme",
  "bugs": {
    "url": "https://github.com/corinagum/bg3-tracker/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/corinagum/bg3-tracker.git"
  },
  "license": "ISC",
  "author": "corinagum",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "vite build",
    "check": "npm run lint && npm run check:types && npm run test",
    "check:types": "tsc --noEmit",
    "clean:test-output": "rm -rf test-output",
    "dev": "vite",
    "fetch-achievements": "tsx src/utils/fetch-achievements.ts",
    "fmt": "prettier --write \"**/*.{js,ts,tsx,json,md,css,html}\"",
    "lint:fix": "eslint --ext .js,.ts,.tsx . --fix",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "preview": "vite preview",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage && vitest run src/utils/fetch-achievements-integration.test.ts --no-isolate --coverage",
    "test:integration": "vitest run src/utils/fetch-achievements-integration.test.ts --no-isolate",
    "test:all": "npm run test && npm run test:integration",
    "test:ui": "vitest --ui",
    "test:watch": "vitest run"
  },
  "devDependencies": {
    "@types/node": "^24.0.4",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.2.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0",
    "vite": "^7.0.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "puppeteer": "^24.10.2"
  }
}
